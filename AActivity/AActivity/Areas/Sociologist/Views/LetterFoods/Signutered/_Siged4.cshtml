@model AActivity.Areas.Sociologist.ModelViews.PrintTripFoodView



@functions{
    string signutreRoleName(string role)
    {
        foreach (var sr in Model.Signatures)
        {
            if (sr.JobsSignatorie.Name  == role)
            {
                return $"{sr.Degree}  {sr.User.FullName}";
            }
        }
        return string.Empty;

    }
}


    <tbody >
        <tr class="border-top">
            <th colspan="4">
                <p class="lead p-3">
                    <span class="ml-5">مع التحية لسعادة المشرف العام على إدارة المدينة الجامعية            </span>
                    <br />
                    <span class="ml-5">            آمل من سعادتكم التكرم بالموافقة على إكمال اللازم وفق اللوائح والأنظمة.      </span>
                </p>
                <div class=" float-left text-center" style="width:30%">

                    <p class="  lead ">
                        <span class=" ">عميد شؤون الطلابط</span>
                    </p>


                    @if (Model.WhoHasSignutre.Any(s => s.WhoHasSignutre == 4))
                    {
                        if (!Model.WhoHasSignutre.FirstOrDefault(s => s.WhoHasSignutre == 4).IsHeOwnerOfSignature)
                        {
                            @:عنه
                        }
                        <img   width="100" src="~/img/signatures/@Model.WhoHasSignutre.Where(h=>h.WhoHasSignutre==3).FirstOrDefault().Signature.SignaturePhoto" />

                    }
                    <p class="  lead ">
                        <span class=" mr-5">
                            @signutreRoleName("عميد شؤون الطلاب")
                        </span>
                    </p>
                </div>

            </th>
        </tr>
</tbody>