@model AActivity.Models.SchedulingTripDetail

@if (!Model.TripBookings.FirstOrDefault().Letters.Any(a => a.TripBookingId > 0 && a.TypeLetter == 1))
{
    <form asp-action="Create" asp-controller="Letters">
        <input type="hidden" name="TripBookingId" value="@Model.TripBookings.FirstOrDefault().Id" />
        <input type="hidden" name="TypeLetter" value="1" />
        <input type="hidden" name="tripDetailsId" value="@Model.Id" />
        <button class="btn btn-danger btn-lg btn-block mb-2" style="cursor:pointer"> <i class="fas fa-bus"></i>   تامين  النقل </button>

    </form>

}
else
{
    if (Model.TripBookings.FirstOrDefault().Letters.FirstOrDefault() != null)
    {
        var signutres = Model.TripBookings.FirstOrDefault().Letters.FirstOrDefault().TripTransportSignatures.Count();
        if (signutres == 0)
        {

            <span class="text-danger">
                <em>انتظار توقيع</em>  رئيس قسم النشاط الاجتماعي
            </span>

        }
        else if (signutres == 1)
        {

            <span class="text-danger">
                <em>انتظار توقيع</em>  مدير إدارة النشاط
            </span>
        }
        else if (signutres == 2)
        {
            <span class="text-danger">
                <em>انتظار توقيع</em> وكيل العمادة لشؤون النشاط
            </span>
        }
        else
        {
            if (Model.TripBookings.FirstOrDefault().Letters.FirstOrDefault().NoMersal == null)
            {
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-warning btn-lg btn-block" data-toggle="modal" data-target="#exampleModal">
                    اضافة صادر مرسال
                </button>
            }
            else
            {
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-warning btn-lg btn-block" data-toggle="modal" data-target="#exampleModal">
                    تعديل صادر مرسال
                </button>
            }
            <a class="btn btn-default btn-lg btn-block mt-2" asp-route-bokingId="@Model.TripBookings.FirstOrDefault().Id" target="_blank" asp-controller="TripTransportSignatures" asp-action="Print">عرض / طباعة </a>

        }

    }


    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form asp-action="NoMersalUpdate" asp-controller="Letters">
                        <div class="modal-body">



                            <input type="hidden" name="letterId" value="@Model.TripBookings.FirstOrDefault().Letters.FirstOrDefault().Id" />
                            <input type="hidden" name="detailId" value="@Model.Id" />

                            <div class="form-group  col-12 ">

                                <div class="form-group">
                                    <label class="control-label"> صادر مرسال </label>
                                    <input type="text" name="NoMersal" class="form-control" />
                                </div>


                            </div>



                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-success  " style="cursor:pointer"> <i class="fas fa-save"></i>  حفظ </button>

                            <a class="btn btn-info text-white" data-dismiss="modal"> <i class="fas fa-redo"></i> تراجع</a>

                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
}