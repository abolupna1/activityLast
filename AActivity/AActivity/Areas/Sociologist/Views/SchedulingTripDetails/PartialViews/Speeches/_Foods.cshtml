@model AActivity.Models.SchedulingTripDetail
@{ 
       var NoMersal2 = Model.TripBookings.FirstOrDefault().Letters.Where(l=>l.TypeLetter==2).FirstOrDefault();

}
@if (!Model.TripBookings.FirstOrDefault().Letters.Any(a => a.TripBookingId > 0 && a.TypeLetter == 2))
{

<a class="btn btn-success btn-lg btn-block mt-2" asp-route-bokingId="@Model.TripBookings.FirstOrDefault().Id" asp-controller="TripFoods" asp-action="Create">اضافة خطاب التغذية </a>

}
else
{
    if (Model.TripBookings.FirstOrDefault().Letters.FirstOrDefault() != null)
    {
        var signutres = Model.TripBookings.FirstOrDefault().Letters.Where(l=>l.TypeLetter==2).FirstOrDefault().TripFoodsSignatures.Count();
        if (signutres == 0)
        {

<span class="text-danger">
    <em>انتظار توقيع</em>  رئيس قسم النشاط الاجتماعي
</span>

        }
        else if (signutres == 1)
        {

<span class="text-danger">
    <em>انتظار توقيع</em>  مدير إدارة النشاط
</span>
        }
        else if (signutres == 2)
        {
<span class="text-danger">
    <em>انتظار توقيع</em> وكيل العمادة لشؤون النشاط
</span>
        }
  else if (signutres == 3)
        {
<span class="text-danger">
    <em>انتظار توقيع</em> عميد شؤون الطلاب
</span>
        }
        else
        {
            if (NoMersal2.NoMersal == null)
            {
 <!-- Button trigger modal -->
<button type="button" class="btn btn-success btn-lg btn-block" data-toggle="modal" data-target="#exampleModal2">
    اضافة صادر مرسال
</button>
            }
            else
            {
 <!-- Button trigger modal -->
<button type="button" class="btn btn-success btn-lg btn-block" data-toggle="modal" data-target="#exampleModal2">
    تعديل صادر مرسال
</button>
            }
<a class="btn btn-default btn-lg btn-block mt-2" asp-route-bokingId="@Model.TripBookings.FirstOrDefault().Id" target="_blank" asp-controller="TripTransportSignatures" asp-action="Print">عرض / طباعة </a>

        }

    }


 <!-- Modal -->
<div class="modal fade" id="exampleModal2" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel2" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="NoMersalUpdate" asp-controller="Letters">
                    <div class="modal-body">



                        <input type="hidden" name="letterId" value="@NoMersal2.Id" />
                        <input type="hidden" name="detailId" value="@Model.Id" />

                        <div class="form-group  col-12 ">

                            <div class="form-group">
                                <label class="control-label"> صادر مرسال </label>
                                <input type="text" value="@NoMersal2.NoMersal" name="NoMersal" class="form-control" />
                            </div>


                        </div>



                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-success  " style="cursor:pointer"> <i class="fas fa-save"></i>  حفظ </button>

                        <a class="btn btn-info text-white" data-dismiss="modal"> <i class="fas fa-redo"></i> تراجع</a>

                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
}