@model AActivity.Models.DelegateToSignutre

@{
    ViewData["Title"] = "انشاء";
    Layout = "~/Views/Shared/_Layout.cshtml";
   
}

<nav aria-label="breadcrumb ">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Sociologist" asp-controller="Home" asp-action="Index">الرئيسية</a></li>
        <li class="breadcrumb-item">
            <a asp-area="Sociologist" asp-controller="DelegateToSignutres"
               asp-action="Details" asp-route-userId="@ViewBag.userId">التوقيع</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-area="Sociologist" asp-controller="DelegateToSignutres"
               asp-action="IndexByWonerSignutre" asp-route-signutreId="@ViewBag.signutreId">  المفوضين بتوقيعي</a>
        </li>

        <li class="breadcrumb-item active" aria-current="page"> تفويض جديد </li>
    </ol>
</nav>
<form asp-action="Create">
    <div class="card">
        <div class="card-header bg-primary text-white">
            تفويض جديد
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-12">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="WonerSignutreId" class="control-label"></label>
                        <input type="hidden" asp-for="WonerSignutreId" value="@ViewBag.signutreId" />
                    </div>
                    <div class="form-group">
                        <label asp-for="DelegatedToSignutreId" class="control-label"></label>
                        <select asp-for="DelegatedToSignutreId" class="form-control" asp-items="ViewBag.DelegatedToSignutreId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="DateDelegate" class="control-label"></label>
                        <input readonly type="text" asp-for="DateDelegate" value="@DateTime.Now.ToString("yyyy-MM-dd")" class="form-control" />
                        <span asp-validation-for="DateDelegate" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Status" checked disabled /> نشط
                        </label>
                    </div>

                </div>
            </div>

        </div>
        <div class="card-footer">
            <button class="btn btn-primary">
                <i class="fa fa-plus-circle"></i>
                حفظ
            </button>

        </div>
    </div>

</form>


