@model AActivity.Models.Letter

@{
    ViewData["Title"] = "التوقيع";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int userId = int.Parse(User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier).Value);

    int duration = Model.TripBooking.TripQtyDays;
    string tripType = Model.TripBooking.SchedulingTripDetail.TripType.Name;
    string day = "يوم";
    if (tripType == "عمرة")
    {
        duration += 2;
    }
    if (duration == 2 )
    {
        day = "يومين";
    }else if (duration>2) { day = "أيام"; }

}



@functions{


    bool signutreRole(int user_id, string roleName)
    {
        var getSignutrelist = ViewBag.signutre as IEnumerable<AActivity.Models.Signature>;

        foreach (var b in getSignutrelist)
        {
            if (b.UserId == user_id && b.SignatureRole == roleName)
            {
                return true;
            }

            if (b.SignatureRole == roleName)
            {
                foreach (var c in b.SignutreDelegates.Where(s => s.SignatureId == b.Id).ToList())
                {
                    if (c.UserId == user_id)
                    {
                        if (c.Status == true && c.EndAtDate > DateTime.Now)
                        {
                            return true;

                        }
                    }
                }
            }

        }

        return false;

    }
}


<style>
    .alert-success {
        color: #155724;
        background-color: #d4edda;
        border-color: #c3e6cb;
    }
</style>
<div class="card mt-5">
    <div class="card-header bg-primary text-white">
        <p class="d-inline  ">
            <i class="fas fa-users "></i>
            انتداب جماعي لمهمة رسمية
        </p>
    </div>
    <div class="card-body">
        @if (TempData["MessageError"] != null)
        {
            <div class="alert alert-danger">@TempData["MessageError"]</div>
        }
        @if (TempData["MessageSuccess"] != null)
        {
            <div class="alert alert-success">@TempData["MessageSuccess"]</div>
        }
        <h6>المنتدبين</h6>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>اسم الموظف </th>
                    <th>رقمه الوظيفي</th>
                    <th>المسمى الوظيفي</th>
                </tr>
            </thead>
            <tbody>
                @{ int i = 1;}
                @foreach (var emp in Model.TripBooking.TripDelegates.Where(e=>e.Confirmed == true).ToList())
                {
                    <tr>
                        <th>@i</th>
                        <td>@emp.EmployeeName</td>
                        <td>@emp.EmployeeNumber</td>
                        <td>@emp.JopName</td>
                    </tr>
                    i++;
                }

            </tbody>
        </table>
        <ul class="list-group list-group-horizontal ">

            <li class="list-group-item  bg-primary text-white"> يشرفون على  </li>
            <li class="list-group-item"> @Model.TripBooking.SchedulingTripDetail.EducationalBody.Name </li>
            <li class="list-group-item  bg-primary text-white">  من   </li>
            <li class="list-group-item"> @Model.TripBooking.SchedulingTripDetail.EducationalBody.City </li>
            <li class="list-group-item  bg-primary text-white">  الى   </li>
            <li class="list-group-item"> @Model.TripBooking.City.LocationName </li>
            <li class="list-group-item  bg-primary text-white">  المدة   </li>
            <li class="list-group-item"> @duration @day  </li>
        </ul>

        <ul class="list-group list-group-horizontal mt-2">
            <li class="list-group-item  bg-primary text-white">    نوع الرحلة   </li>
            <li class="list-group-item"> @Model.TripBooking.SchedulingTripDetail.TripType.Name</li>

            <li class="list-group-item  bg-primary text-white">  إعتبارا من تاريخ  </li>
            <li class="list-group-item"> @Model.TripBooking.SchedulingTripDetail.TripDate.ToString("dd-MM-yyyy") </li>
        </ul>


    </div>
    <div class="card-footer text-white">
        @if (signutreRole(userId, "رئيس قسم النشاط الاجتماعي"))
        {
            @await Html.PartialAsync("Signutres/_Sig1.cshtml", Model)

        }
        else if (signutreRole(userId, "مدير إدارة النشاط"))
        {
            @await Html.PartialAsync("Signutres/_Sig2.cshtml", Model)
        }
        else if (signutreRole(userId, "وكيل العمادة لشؤون النشاط"))
        {
            @await Html.PartialAsync("Signutres/_Sig3.cshtml", Model)
        }
        else if (signutreRole(userId, "عميد شؤون الطلاب"))
        {
            @await Html.PartialAsync("Signutres/_Sig4.cshtml", Model)
        }

        <a class="btn  btn-primary  text-white  mt-3" asp-route-LetterId="@Model.Id" asp-controller="LetterDelegations" asp-action="Print">
            <i class="fas fa-eye"></i>
            عرض الخطاب
        </a>
    </div>
</div>

