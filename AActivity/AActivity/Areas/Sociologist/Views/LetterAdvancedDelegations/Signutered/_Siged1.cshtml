@model AActivity.Areas.Sociologist.ModelViews.PrintLetterAdvancedDelegation



@functions{
    string signutreRoleName(string role)
    {
        foreach (var sr in Model.Signatures)
        {
            if (sr.SignatureRole == role)
            {
                return $"{sr.Degree}  {sr.User.FullName}";
            }
        }
        return string.Empty;

    }
}


<tbody class="border-bottom ">
    <tr>
        <th colspan="4">
            <p class="pt-3 lead">
                <span class="ml-5 ">
                    وذلك لغرض الصرف منها على فعالية <em><strong> @Model.EduName</strong></em>
                    إلى <em>@Model.TripTo</em>
                </span>
                <br />
                <span class="ml-5 ">
                    يوم <em> @Model.TripDate.ToString("dddd")</em>
                    الموافق <em> @Model.TripDate.ToString("dd-MM-yyyy")</em>
                    لعدد  (<em> @Model.QtyStudent</em>) طالبا
                </span>

                <br />

                <span class="ml-5 ">
                    وفق المبلغ المالي المخصص للفعالية المذكورة أعلاه وقدره: (<em> @Model.Amount</em>)
                    ريال فقط لا غير.
                </span>

                <br />
                <span class="ml-5 ">
                    على أن تكون باسم: (<em> @Model.AdvanceForEmp</em> ) 
                    رقم الجوال : (<em > @Model.EmpMobile</em>)
                </span>
                <br />
                <span class="ml-5 "> وفق الله الجميع؛؛؛ </span>
                <br />


            </p>

       




            <div class=" float-left text-center" style="width:30%">

                <p class="  lead ">
                    <span class=" ">رئيس قسم النشاط الاجتماعي</span>
                </p>

                @if (Model.WhoHasSignutre.Any(s => s.WhoHasSignutre == 1))
                {

                    if (!Model.WhoHasSignutre.FirstOrDefault(s => s.WhoHasSignutre == 1).IsHeOwnerOfSignature)
                    {
                        @:عنه
                    }
                    <img width="100" src="~/img/signatures/@Model.WhoHasSignutre.Where(h=>h.WhoHasSignutre==1).FirstOrDefault().Signature.SignaturePhoto" />

                }
                <p class="  lead ">
                    <span class=" mr-5">
                        @signutreRoleName("رئيس قسم النشاط الاجتماعي")
                    </span>
                </p>
            </div>

        </th>
    </tr>
</tbody>