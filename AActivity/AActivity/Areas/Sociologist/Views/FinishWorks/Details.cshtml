
@model AActivity.Areas.Sociologist.ModelViews.FinishWorkCreateModelView

@{
    ViewData["Title"] = "طباعة";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    .lead {
        font-size: 1rem;
        font-weight: 200;
    }

    .fa-2x {
        font-size: 1em;
    }
</style>
<button id="print" class="btn btn-outline-gold "><i class="fa fa-print fa-3x"></i></button>
<hr />

<div class="row printed ar">
    <div class="col-12">
        <table id="table" >
            <thead>
                <tr>
                    <th colspan="4">
                        <img src="~/img/letter/letterHeade.PNG" class="w-100 h-50" />
                    </th>

                </tr>
                <tr class="text-center">
                    <th class="pt-4" colspan="4">
                        <h5>
                            وثيقة أداء  مهمة
