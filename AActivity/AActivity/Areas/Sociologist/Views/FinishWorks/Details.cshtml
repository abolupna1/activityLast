                    <span class="border pt-2 pb-2 pl-4 pr-4">
                    </span>
                    <text>نعم&nbsp;	&nbsp;&nbsp;	&nbsp;		</Text>

                }
            </div>
            <div class="col-md-3 mt-4 ">
                @if (Model.CashAdvance == false)
                {
                    <text>&nbsp;	&nbsp;&nbsp;	&nbsp;لا</Text>
                    <span class="border pt-2 pb-2 pl-4 pr-4">
                        <i class="fa fa-check"></i>

                    </span>
                }
                else
                {
