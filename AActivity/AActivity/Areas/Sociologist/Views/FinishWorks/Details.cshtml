                    </th>
                </tr>
            </thead>
          
        </table>

        <div class="row border p-3 ar">
            <div class="col-md-4">
                اسم الموظف : @Model.EmployeeName
            </div>
            <div class="col-md-4">
                مسمى الوظيفة: @Model.JopName
            </div>
            <div class="col-md-4">
                المرتبة : @Model.JopDegree
            </div>
            <div class="col-md-12 mt-3 text-center">
                بناء على قرار الانتداب رقم  : @Model.DelegationNumber
                وتاريخ  : @Model.DateDelgation.ToString("dd-MM-yyyy")
            </div>
            <div class="col-md-12 mt-4 text-center">
                قد تم  إنهاء المهمة في مدة (@Model.EndWorkDuration)
                أيام اعتباراً من @Model.FromDateDelgation.ToString("dd-MM-yyyy")
                جهة الانتداب (@Model.DelegationBudy)
            </div>
            <div class="col-md-6 mt-3 ">
                علما بأن وسيلة النقل على حساب
            </div>

            <div class="col-md-3 mt-4 ">
                @if (Model.CashAdvance == true)
                {
                    <text>الموظف</Text>
                    <span class="border pt-2 pb-2 pl-4 pr-4">
                        <i class="fa fa-check"></i>
                    </span>
                }
                else
                {
                    <span class="border pt-2 pb-2 pl-4 pr-4">
                    </span>
                    <text>الموظف</Text>

                }
            </div>
            <div class="col-md-3 mt-4 ">
                @if (Model.CashAdvance == false)
                {
                    <text>الجهة</Text>
                    <span class="border pt-2 pb-2 pl-4 pr-4">
                        <i class="fa fa-check"></i>

                    </span>
                }
                else
                {
                    <span class="border pt-2 pb-2 pl-4 pr-4">
                    </span>
                    <text>الجهة</Text>

                }

            </div>
            <div class="col-md-6 mt-4 ">
                والسكن على حساب
            </div>
            <div class="col-md-3 mt-4 ">
                @if (Model.LivingBuy == true)
                {
                    <text>الموظف</Text>
                    <span class="border pt-2 pb-2 pl-4 pr-4">
                        <i class="fa fa-check"></i>
                    </span>
                }
                else
                {
                    <span class="border pt-2 pb-2 pl-4 pr-4">
                    </span>
                    <text>الموظف</Text>

                }
            </div>
            <div class="col-md-3 mt-4 ">
                @if (Model.LivingBuy == false)
                {
                    <text>الجهة</Text>
                    <span class="border pt-2 pb-2 pl-4 pr-4">
                        <i class="fa fa-check"></i>

                    </span>
                }
                else
                {
                    <span class="border pt-2 pb-2 pl-4 pr-4">
                    </span>
                    <text>الجهة</Text>

                }

            </div>


