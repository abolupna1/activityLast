@model AActivity.Areas.Sociologist.ModelViews.PrintLetterTransportModelView



@functions{
    string signutreRoleName(string role)
    {
        foreach (var sr in Model.Signatures)
        {
            if (sr.SignatureRole == role)
            {
                return $"{sr.Degree}  {sr.User.FullName}";
            }
        }
        return string.Empty;

    }
}


<tbody class="border-bottom ">
    <tr>
        <th colspan="4">
            <p class="pt-3 lead">
                <span class="ml-5 ">  سعادة مدير إدارة النشاط</span>
                <br />
                <span class="ml-5">السلام عليكم ورحمة الله وبركاته </span>  <span class="ml-5">وبعد.</span>
                <br />
                <span class="ml-5">
                    نظرًا لقيام رحلة إلى
                    <em class="mr-5">
                        @Model.TripToCity
                    </em>
                    يوم/
                    <em>
                        @Model.TripDate.ToString("dddd", Model.cultureInfo)
                    </em>


                </span>
                <span class="ml-5">
                    الموافق/
                    <em>
                        @Model.TripDate.ToString("dd-MM-yyyy")
                    </em>
                </span>
                لفعاليات النشاط الاجتماعي.
                <br />
                <span class="ml-5">
                    آمل من سعادتكم التكرم بتأمين عدد
                    (<em>
                        @Model.QtyBuses
                    </em>)
                     باصات للرحلة المذكورة أعلاه  .
                </span>
              

                <br />
               
                <span class="ml-5"> وفق الله الجميع؛؛؛ </span>
                <br />
                <span class="ml-5"> </span>
                <span class="ml-5"> </span>
                <span class="ml-5"> </span>
                <span class="ml-5">والسلام عليكم ورحمة الله وبركاته </span>



            </p>






            <div class=" float-left text-center" style="width:30%">

                <p class="  lead ">
                    <span class=" ">رئيس قسم النشاط الاجتماعي</span>
                </p>

                @if (Model.WhoHasSignutre.Any(s => s.WhoHasSignutre == 1))
                {
                  
                    if (!Model.WhoHasSignutre.FirstOrDefault(s=>s.WhoHasSignutre==1).IsHeOwnerOfSignature)
                    {
                        @:عنه
                    }
                    <img  width="100" src="~/img/signatures/@Model.WhoHasSignutre.Where(h=>h.WhoHasSignutre==1).FirstOrDefault().Signature.SignaturePhoto" />

                }
                <p class="  lead ">
                    <span class=" mr-5">
                        @signutreRoleName("رئيس قسم النشاط الاجتماعي")
                    </span>
                </p>
            </div>

        </th>
    </tr>
</tbody>