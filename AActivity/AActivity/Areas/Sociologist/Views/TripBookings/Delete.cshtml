@model AActivity.Models.TripBooking

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card mt-5 mb-3">
    <h5 class="card-header bg-primary-bold ">
        <i class="fas fa-minus"></i>
        الغاء الحجز
    </h5>
    <div class="card-body">
        <h3 class="text-center text-danger">هل تريد الغاء الحجز بالفعل ؟</h3>
        <hr />
        <dl class="row">
          
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.City)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.City.LocationName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TripToDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TripToDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TripQtyDays)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TripQtyDays)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TripLocationName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TripLocationName)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />

            <div class="form-group col-12 mt-5">

                
                <a class="btn  btn-outline-primary btn-lg" asp-action="DetailsMore" asp-route-id="@Model.SchedulingTripDetailId" asp-controller="SchedulingTripDetails"> <i class="fas fa-share-square"></i> تراجع </a>
                <button class="btn btn-outline-danger  btn-lg" style="cursor:pointer"> <i class="fas fa-minus"></i>   الغاء </button>

            </div>
        </form>
    </div>
</div>

