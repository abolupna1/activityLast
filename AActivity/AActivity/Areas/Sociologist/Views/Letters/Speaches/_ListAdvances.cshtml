@model AActivity.Models.LetterAdvancedDelegation


@if (Model.LetterSignutreForAdvances.Count() == 4)
{

    @if (Model.Letter.NoMersal == 0)
    {<div class="alert alert-danger" role="alert">
            <i class="fas fa-mail-bulk"></i>
            صادر مرسال: لايوجد

        </div>

    }
    else
    {
        <div class="alert alert-info" role="alert">
            <i class="fas fa-mail-bulk"></i>
            صادر مرسال :
            @Model.Letter.NoMersal
        </div>
    }
    <hr style="border-bottom:solid 2px #025d94" />
}


<div class="row mt-3">
    <div class="col-12">
        <dl class="row border ">
            <dt class="col-sm-2 border p-2">
                الموظف
            </dt>
            <dt class="col-sm-10 border p-2">
                @Model.CreditToEMployee
            </dt>

            <dt class="col-sm-2 border p-2">
                مبلغ السلفة
            </dt>
            <dt class="col-sm-10 border p-2">
                @{ float total = Model.Amount + Model.AmountAdditional;}
                @total
            </dt>
        </dl>
    </div>
    <h6 class="text-muted col-12 mb-3">حالات التوقيع</h6>
    <div class="col-md-3 ">
        @if (Model.LetterSignutreForAdvances.Where(s => s.WhoHasSignutre == 1).Count() == 0)
        {
            <div class="alert alert-danger" role="alert">
                <i class="fas fa-user-times"></i>
                رئيس قسم النشاط الاجتماعي
            </div>
        }
        else
        {
            <div class="alert alert-success" role="alert">
                <i class="fas fa-user-check"></i>
                رئيس قسم النشاط الاجتماعي
            </div>
        }


    </div>
    <div class="col-md-3">

        @if (Model.LetterSignutreForAdvances.Where(s => s.WhoHasSignutre == 2).Count() == 0)
        {
            <div class="alert alert-danger" role="alert">
                <i class="fas fa-user-times"></i>
                مدير إدارة النشاط

            </div>
        }
        else
        {
            <div class="alert alert-success" role="alert">
                <i class="fas fa-user-check"></i>
                مدير إدارة النشاط

            </div>
        }
    </div>
    <div class="col-md-3">

        @if (Model.LetterSignutreForAdvances.Where(s => s.WhoHasSignutre == 3).Count() == 0)
        {
            <div class="alert alert-danger" role="alert">
                <i class="fas fa-user-times"></i>
                وكيل العمادة لشؤون النشاط
            </div>
        }
        else
        {
            <div class="alert alert-success" role="alert">
                <i class="fas fa-user-check"></i>
                وكيل العمادة لشؤون النشاط
            </div>
        }
    </div>

    <div class="col-md-3">

        @if (Model.LetterSignutreForAdvances.Where(s => s.WhoHasSignutre == 4).Count() == 0)
        {
            <div class="alert alert-danger" role="alert">
                <i class="fas fa-user-times"></i>
                عميد شؤون الطلاب
            </div>
        }
        else
        {
            <div class="alert alert-success" role="alert">
                <i class="fas fa-user-check"></i>
                عميد شؤون الطلاب
            </div>
        }
    </div>

</div>

<hr style="border-bottom:solid 2px #025d94" />

