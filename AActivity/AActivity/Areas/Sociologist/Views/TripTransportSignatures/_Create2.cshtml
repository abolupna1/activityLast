@model AActivity.Models.Letter

@{

    var signature2 = Model.TripTransportSignatures.Where(d => d.StatusSignature == 2).FirstOrDefault();


}
@functions{
    bool IsSameSignutre(int userId)
    {
        var cc = ViewBag.signutre as List<AActivity.Models.Signature>;
        foreach (var si in cc)
        {
            if (si.UserId == userId && si.SignatureRole == "مدير إدارة النشاط" && si.Status==true)
            {
                return true;
            }
        }
        return false;
    }
}

@if (signature2 != null)
{
    if (!IsSameSignutre(signature2.Signature.UserId))
    {
        @:عنه
    }
    <img class="" width="90px" height="90px" src="~/img/signatures/@signature2.Signature.SignaturePhoto" />

}


