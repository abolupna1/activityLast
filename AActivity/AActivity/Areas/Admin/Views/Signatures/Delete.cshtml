@model AActivity.Models.Signature


@{
    ViewData["Title"] = "حذف";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card mt-5 mb-3">
    <h5 class="card-header bg-primary-bold ">
        <i class="fas fa-trash"></i>
        حذف  التوقيع
    </h5>
    <div class="card-body">
        <h3 class="text-center text-danger">هل تريد الحذف بالفعل ؟</h3>
        <hr />
        <dl class="row">
        <dt class="col-sm-2 mb-5">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10 mb-5">
            @Html.DisplayFor(model => model.User.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SignaturePhoto)
        </dt>
        <dd class="col-sm-10">
            <img id="image" asp-append-version="true" alt="الصورة" src="~/img/signatures/@Model.SignaturePhoto" width="200" height="200" class="img-thumbnail">

        </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />

            <div class="form-group col-12 mt-5">


                <a class="btn  btn-outline-primary btn-lg" asp-action="Index"> <i class="fas fa-share-square"></i> تراجع </a>
                <button class="btn btn-outline-danger  btn-lg" style="cursor:pointer"> <i class="fas fa-trash"></i>   احذف </button>

            </div>
        </form>
    </div>
</div>
</div>
