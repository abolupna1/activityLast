@model AActivity.Areas.Admin.ModelViews.UsersView

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="mt-5 mb-3">
    <p class="d-inline text-secondary "> <i class="fas fa-users-cog fa-2x"></i>  المستخدمين </p>


    <p class="d-inline">
        <a class="btn btn-outline-primary btn-lg float-left " asp-action="Create"> <i class="fas fa-plus"></i>   مستخدم جديد</a>
    </p>


</div>
@if (ViewBag.successMsg != null)
{
  
<div class="alert alert-dismissible alert-success">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong> @ViewBag.successMsg </strong>
</div>
}
<table class="table table-hover table-bordered table-striped ">
    <thead class="table-primary ">
        <tr>
            <th>#</th>
            <th>
                اسم الموظف
            </th>
            <th>
                رقم الموظف


            </th>
            <th>الأدوار</th>


        </tr>
    </thead>
    <tbody>
        @{ int i = 1;}
        @foreach (var item in Model.Users)
        {
            <tr>
                <th>@i</th>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">
                        @Html.DisplayFor(modelItem => item.FullName)
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @foreach (var role in item.UserRoles)
                    {
                        <span class="badge badge-pill badge-primary">@role.Role.ArName</span>

                    }
                </td>


            </tr>
            i++;
        }
    </tbody>
</table>

