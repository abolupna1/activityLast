@model List<AActivity.Areas.Admin.ModelViews.LettersAndSignaturesModelView>

@{
    ViewData["Title"] = "الخطابات";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav aria-label="breadcrumb ">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Sociologist" asp-controller="Home" asp-action="Index">الرئيسية</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Signatures" asp-action="Index">التواقيع</a></li>
        <li class="breadcrumb-item active" aria-current="page">صلاحيات التوقيع</li>
    </ol>
</nav>

<form  asp-action="IndexBysignutre" asp-route-signutreId="@ViewBag.SignutreId">

    
    <div class="card">
        <div class="card-header bg-primary text-white">
            صلاحيات توقيع :
            @if (ViewBag.Signutre != null)
            {
                <span>@ViewBag.Signutre</span>

            }
        </div>

        <div class="card-body">
            @for (int i = 0; i < Model.Count(); i++)
            {

                <input type="hidden" asp-for="@Model[i].TypesOfletterId" />
                <input type="hidden" asp-for="@Model[i].TypesOfletterName" />
                <input type="hidden" asp-for="@Model[i].TypeOfLetterAndSignutreId" />



                <div class="form-check">
                    <input class="form-check-input" asp-for="@Model[i].IsSelected">
                    <label class="form-check-label">
                        @Model[i].TypesOfletterName
                    </label>
                </div>
            }

        </div>
        <div class="card-footer">
            <button class="btn btn-primary text-white" type="submit">حفظ</button>
        </div>

    </div>

</form>
