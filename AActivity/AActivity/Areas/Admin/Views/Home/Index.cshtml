@{
    ViewData["Title"] = "لوحة التحكم";
}




<style>
    .counter {
        background-color: #025d94;
        padding: 20px 0;
        border-radius: 5px;
        color: white;
    }
        .counter:hover {
            background-color: #01a2ce;
            color: white;
        }
    .count-title {
        font-size: 40px;
        font-weight: normal;
        margin-top: 10px;
        margin-bottom: 0;
        text-align: center;
     
    }

    .count-text {
        font-size: 13px;
        font-weight: normal;
        margin-top: 10px;
        margin-bottom: 0;
        text-align: center;
       
    }

    .fa-2x {
        margin: 0 auto;
        float: none;
        display: table;
        color: #214565;
    }

    .btnA, .btnA:hover {
        text-decoration: none;
        color: #214565;
    }
</style>

<div class="container mt-5">


 

    <div class="row text-center ">

        <div class="col-md-6 col-sm-6 mb-4">
            <a asp-controller="AppSettings" asp-area="Admin" asp-action="Index" class="btnA">
                <div class="counter">
                    <i class="fa fa-cogs fa-3x"></i>
                    <p class="count-text ">
                        <h4 class="mt-4">  إعدادات عامة للرحلات المجدولة </h4>
                    </p>
                </div>
            </a>
        </div>

        <div class="col-md-3 col-sm-6 mb-4">
            <a asp-controller="Users" asp-area="Admin" asp-action="Index" class="btnA">
                <div class="counter">
                    <i class="fa fa-users-cog fa-3x"></i>
                    <p class="count-text ">
                        <h4 class="mt-4">المستخدمين</h4>
                    </p>
                </div>
            </a>
        </div>

        <div class="col-md-3 col-sm-6 mb-4">
            <a asp-controller="EducationalBodies" asp-area="Admin" asp-action="Index" class="btnA">
                <div class="counter">
                    <i class="fa fa-university fa-3x"></i>
                    <p class="count-text ">
                        <h4 class="mt-4">الجهات التعليمية</h4>
                    </p>
                </div>
            </a>
        </div>

        <div class="col-md-3 col-sm-6 mb-4">
            <a asp-controller="AcademicYears" asp-area="Admin" asp-action="Index" class="btnA">
                <div class="counter">
                    <i class="fa fa-calendar-alt fa-3x"></i>
                    <p class="count-text ">
                        <h4 class="mt-4"> السنة الدراسية</h4>
                    </p>
                </div>
            </a>
        </div>

        <div class="col-md-3 col-sm-6 mb-4">
            <a asp-controller="Cities" asp-area="Admin" asp-action="Index" class="btnA">
                <div class="counter">
                    <i class="fa fa-city fa-3x"></i>
                    <p class="count-text ">
                        <h4 class="mt-4">  المدن </h4>
                    </p>
                </div>
            </a>
        </div>

        <div class="col-md-3 col-sm-6 mb-4">
            <a asp-controller="Signatures" asp-area="Admin" asp-action="Index" class="btnA">
                <div class="counter">
                    <i class="fa fa-fingerprint fa-3x"></i>
                    <p class="count-text ">
                        <h4 class="mt-4">  التواقيع </h4>
                    </p>
                </div>
            </a>
        </div>




        








    </div>

    

</div>