<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - النشاط </title>

    <environment include="Development">
        <link href="~/lib/bootstrap/dist/css/rtl/bootstrap.css" rel="stylesheet" />
        <link href="~/lib/bootstrap/dist/css/bootstrap.min.Yeti.css" rel="stylesheet" />
        <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
        <link href="~/lib/datepicker/jquery-ui.min.css" rel="stylesheet" />
        <link href="~/lib/datatable/DataTables-1.10.18/css/dataTables.bootstrap.min.css" rel="stylesheet" />
        <link href="~/lib/datatable/Responsive-2.2.2/css/responsive.bootstrap4.min.css" rel="stylesheet" />

    </environment>
    <environment exclude="Development">

        <link href="~/lib/bootstrap/dist/css/rtl/bootstrap.css" rel="stylesheet" />
        <link href="~/lib/bootstrap/dist/css/bootstrap.min.Yeti.css" rel="stylesheet" />
        <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
        <link href="~/lib/datepicker/jquery-ui.min.css" rel="stylesheet" />
        <link href="~/lib/datatable/DataTables-1.10.18/css/dataTables.bootstrap.min.css" rel="stylesheet" />
        <link href="~/lib/datatable/Responsive-2.2.2/css/responsive.bootstrap4.min.css" rel="stylesheet" />


    </environment>
   
    <link href="https://fonts.googleapis.com/css?family=Cairo" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/myStyle.css" rel="stylesheet" />
  
</head>
<body class="ar">
   
    <header class="ar" >

        <nav  class="navbar navbar-expand-sm top-bar navbar-toggleable-sm navbar-dark  bg-primary border-bottom box-shadow mb-3">
         
                <a class="navbar-brand " asp-area="Sociologist" asp-controller="Home" asp-action="Index"> النشاط الإجتماعي</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @if (User.Identity.IsAuthenticated)
                {
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="Sociologist" asp-controller="Home" asp-action="Index">

                                <i class="fa fa-home"></i>
                                الرئيسية
                            </a>
                        </li>
                        @if (User.IsInRole("Admin") || User.IsInRole("Owner"))
                        {
                            <li class="nav-item">
                                <a class="nav-link " asp-area="Admin" asp-controller="Home" asp-action="Index">
                                    <i class="fa fa-cogs"></i>
                                    إدارة النظام
                                </a>
                            </li>
                        }

                        <li class="nav-item ">
                            <a class="nav-link active" asp-area="Sociologist" asp-controller="Letters" asp-action="Index">

                                <i class="fa fa-envelope"></i>

<span id="notiCount"></span>

                            </a>
                        </li>
                    </ul>
             
                </div>
                }
              
        </nav>
    </header>
    <div class="container">
        @*<partial name="_CookieConsentPartial" />*@
 
        @Vereyon.Web.FlashMessageHtmlHelper.RenderFlashMessages(Html)

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted top-bar" >
        <div class="container">
            &copy; 2019 - AActivity - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
        <script src="~/lib/datepicker/jquery-ui.min.js"></script>
        <script src="~/lib/datepicker/datepicker-ar.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
        <script src="~/lib/datatable/datatables.min.js"></script>
        <script src="~/lib/datatable/DataTables-1.10.18/js/dataTables.bootstrap4.min.js"></script>
        <script src="~/lib/datatable/Responsive-2.2.2/js/responsive.bootstrap4.js"></script>

    </environment>
    <environment exclude="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>

        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
        <script src="~/lib/datepicker/jquery-ui.min.js"></script>
        <script src="~/lib/datepicker/datepicker-ar.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
        <script src="~/lib/datatable/datatables.min.js"></script>
        <script src="~/lib/datatable/DataTables-1.10.18/js/dataTables.bootstrap4.min.js"></script>
        <script src="~/lib/datatable/Responsive-2.2.2/js/responsive.bootstrap4.js"></script>

    </environment>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
